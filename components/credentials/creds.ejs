<style type="text/css">
  .creds {
    padding-top: 1.5%;
    padding-bottom: 1.5%;
    padding-left: 5%;
    padding-right: 5%;
    text-align: center;
    background-color: #6e6e6e;
  }
  
  .creds img {
    max-height: 90px;
    filter: grayscale(100%);
    transition: all 0.5s ease;
  }
  
  .creds img:hover {
    filter: grayscale(0%);
  }
</style>

<section class="creds">
  <div class="row">
    <% creds.forEach(function(cred){ %>
      <div class="col third">
        <img src="<%= cred.src %>"></img>      
      </div>
    <% }) %>
  </div>
</section>